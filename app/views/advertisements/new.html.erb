<h1>Create a new Ad</h1>
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Ads</p>
    <ul>
      <li>Keep it PG-rated.</li>
      <li>Include references to MC Hammer.</li>
      <li>Make sure to offer at least 2 extra units for another 14.99</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %> <!--label for a title-->
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', placeholder: "Enter ad content" %>
      </div>

      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: 'form-control', placeholder: "Enter ad price" %>
      </div>
        <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
