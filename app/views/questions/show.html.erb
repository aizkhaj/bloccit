<h1><%= @question.title %></h1>

<div class="row">
  <div class="col-md-8">
    <h5><%= @question.resolved ? "Resolved" : "Unresolved"%></h5>
    <p><%= @question.body %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
    <%= link_to "Delete Post", @post, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete the post?'} %>
  </div>
</div>

